{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2023"],
    "module": "esnext",
    "target": "es2023",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true
  },
  "strict": true,
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
